{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch Installer",
            "cargo": {
                "args": [
                    "build",
                    "--manifest-path=./src-tauri/Cargo.toml",
                    "--no-default-features"
                ]
            },
            "cwd": "${workspaceFolder}/sample",
            "env": {
                "WEBVIEW2_ADDITIONAL_BROWSER_ARGUMENTS": "--remote-debugging-port=1432"
            }
        },
        {
            "name": "Attach to WebView",
            "port": 1432,
            "request": "attach",
            "timeout": 300000,
            "type": "chrome",
            "webRoot": "${workspaceFolder}"
        }
    ],
    "compounds": [
        {
            "name": "Debug Installer",
            "configurations": [
                "Launch Installer",
                "Attach to WebView"
            ]
        }
    ]
}